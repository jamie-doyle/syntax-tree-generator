<class>
  <accessLevel>public</accessLevel>
  <isStatic>true</isStatic>
  <name>TestClass</name>
  <method>
      <accessLevel>private</accessLevel>
      <isStatic>true</isStatic>
      <returnType>void</returnType>
      <name>Main</name>
      <parameters>
        <variable>
          <name>x</name>
          <type>int</type>  
        </variable>
      </parameters>
      <statements>
        <assign>
          <!-- Assignment requires the left-side first (so a variable must be the first subnode here).
               This example parses to "x = 10" -->
          <variable>
            <name>x</name>
            <type>int</type>
          </variable>
          <constant>
            <value>10</value>
          </constant>
        </assign>
        <operation>
          <!-- Operations can be in any order  so long as two operands and an operator are present. 
               This example parses to "10 + 5" -->
          <operator>+</operator>
          <variable>
            <name>x</name>
          </variable>
          <constant>
            <value>5</value>
          </constant>
        </operation>

        <if>
          <condition>
            
            
            <operation>
              <constant>
                <value>5</value>
              </constant>
              <operator>&lt;</operator>
              <constant>
                <value>10</value>
              </constant>
            </operation>
          
            
          </condition>
          <body>
            <statements>
              <!-- Some statements -->
            </statements>
          </body>
          <elseBody>
            <statements>
              <!-- Some statements -->
            </statements>
          </elseBody>
        </if>
        
        <!--<methodCall>
          <dot>System</dot>
          <dot>out</dot>
          <dot>println</dot>
          <variable>string</variable>
        </methodCall>-->
      </statements>
  </method>
</class>