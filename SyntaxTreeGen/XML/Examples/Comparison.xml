<?xml version="1.0" encoding="utf-8" ?>
<!-- Adapted from Fig 3.18 pg 68 (Deitel & Deitel 2012) -->
<class>
  <accessLevel>public</accessLevel>
  <isStatic>false</isStatic>
  <name>Comparison</name>

  <method>
    <accessLevel>public</accessLevel>
    <isStatic>true</isStatic>
    <returnType>void</returnType>
    <name>Main</name>
    <parameters>
      <variable>
        <name>args</name>
        <type>string[]</type>
        <isDeclaration>true</isDeclaration>
      </variable>
    </parameters>
    <statements>
      <!-- Declarations -->
      <variable>
        <name>number1</name>
        <type>int</type>
        <isDeclaration>true</isDeclaration>
      </variable>
      <variable>
        <name>number2</name>
        <type>int</type>
        <isDeclaration>true</isDeclaration>
      </variable>

      <!-- Prompt user -->
      <externalCall>
        <qualifier>
          System
        </qualifier>
        <qualifier>
          Console
        </qualifier>
        <qualifier>
          WriteLine
        </qualifier>
        <parameters>
          <constant>
            <value>
              "Enter first integer: "
            </value>
          </constant>
        </parameters>
      </externalCall>

      <!-- Read first number -->
      <assign>
        <variable>
          <name>number1</name>
          <type>int</type>
        </variable>
        <externalCall>
          <qualifier>
            Convert
          </qualifier>
          <qualifier>
            ToInt32
          </qualifier>
          <parameters>
            <externalCall>
              <qualifier>
                Console
              </qualifier>
              <qualifier>
                ReadLine
              </qualifier>
            </externalCall>
          </parameters>
        </externalCall>
      </assign>

      <!-- Prompt user -->
      <externalCall>
        <qualifier>
          System
        </qualifier>
        <qualifier>
          Console
        </qualifier>
        <qualifier>
          WriteLine
        </qualifier>
        <parameters>
          <constant>
            <value>
              "Enter second integer: "
            </value>
          </constant>
        </parameters>
      </externalCall>

      <!-- Read second number -->
      <assign>
        <variable>
          <name>number2</name>
          <type>int</type>
        </variable>
        <externalCall>
          <qualifier>
            Convert
          </qualifier>
          <qualifier>
            ToInt32
          </qualifier>
          <parameters>
            <externalCall>
              <qualifier>
                Console
              </qualifier>
              <qualifier>
                ReadLine
              </qualifier>
            </externalCall>
          </parameters>
        </externalCall>
      </assign>

      <!-- if number1 == number2 -->
      <if>
        <condition>
          <operation>
            <variable>
              <name>number1</name>
              <type>int</type>
            </variable>
            <operator>==</operator>
            <variable>
              <name>number2</name>
              <type>int</type>
            </variable>
          </operation>
        </condition>
        <body>
          <statements>
            <externalCall>
              <qualifier>
                System
              </qualifier>
              <qualifier>
                Console
              </qualifier>
              <qualifier>
                WriteLine
              </qualifier>
              <parameters>
                <constant>
                  <value>
                    "{0} == {1}"
                  </value>
                </constant>
                <variable>
                  <name>number1</name>
                  <type>int</type>
                </variable>
                <variable>
                  <name>number2</name>
                  <type>int</type>
                </variable>
              </parameters>
            </externalCall>
          </statements>
        </body>
      </if>

      <!-- if number1 != number2 -->
      <if>
        <condition>
          <operation>
            <variable>
              <name>number1</name>
              <type>int</type>
            </variable>
            <operator>!=</operator>
            <variable>
              <name>number2</name>
              <type>int</type>
            </variable>
          </operation>
        </condition>
        <body>
          <statements>
            <externalCall>
              <qualifier>
                System
              </qualifier>
              <qualifier>
                Console
              </qualifier>
              <qualifier>
                WriteLine
              </qualifier>
              <parameters>
                <constant>
                  <value>
                    "{0} != {1}"
                  </value>
                </constant>
                <variable>
                  <name>number1</name>
                  <type>int</type>
                </variable>
                <variable>
                  <name>number2</name>
                  <type>int</type>
                </variable>
              </parameters>
            </externalCall>
          </statements>
        </body>
      </if>

      <!-- if number1 < number2 -->
      <if>
        <condition>
          <operation>
            <variable>
              <name>number1</name>
              <type>int</type>
            </variable>
            <operator>&lt;</operator>
            <variable>
              <name>number2</name>
              <type>int</type>
            </variable>
          </operation>
        </condition>
        <body>
          <statements>
            <externalCall>
              <qualifier>
                System
              </qualifier>
              <qualifier>
                Console
              </qualifier>
              <qualifier>
                WriteLine
              </qualifier>
              <parameters>
                <constant>
                  <value>
                    "{0} &lt; {1}"
                  </value>
                </constant>
                <variable>
                  <name>number1</name>
                  <type>int</type>
                </variable>
                <variable>
                  <name>number2</name>
                  <type>int</type>
                </variable>
              </parameters>
            </externalCall>
          </statements>
        </body>
      </if>

      <!-- if number1 > number2 -->
      <if>
        <condition>
          <operation>
            <variable>
              <name>number1</name>
              <type>int</type>
            </variable>
            <operator>&gt;</operator>
            <variable>
              <name>number2</name>
              <type>int</type>
            </variable>
          </operation>
        </condition>
        <body>
          <statements>
            <externalCall>
              <qualifier>
                System
              </qualifier>
              <qualifier>
                Console
              </qualifier>
              <qualifier>
                WriteLine
              </qualifier>
              <parameters>
                <constant>
                  <value>
                    "{0} &gt; {1}"
                  </value>
                </constant>
                <variable>
                  <name>number1</name>
                  <type>int</type>
                </variable>
                <variable>
                  <name>number2</name>
                  <type>int</type>
                </variable>
              </parameters>
            </externalCall>
          </statements>
        </body>
      </if>

      <!-- if number1 <= number2 -->
      <if>
        <condition>
          <operation>
            <variable>
              <name>number1</name>
              <type>int</type>
            </variable>
            <operator>&lt;=</operator>
            <variable>
              <name>number2</name>
              <type>int</type>
            </variable>
          </operation>
        </condition>
        <body>
          <statements>
            <externalCall>
              <qualifier>
                System
              </qualifier>
              <qualifier>
                Console
              </qualifier>
              <qualifier>
                WriteLine
              </qualifier>
              <parameters>
                <constant>
                  <value>
                    "{0} &lt;= {1}"
                  </value>
                </constant>
                <variable>
                  <name>number1</name>
                  <type>int</type>
                </variable>
                <variable>
                  <name>number2</name>
                  <type>int</type>
                </variable>
              </parameters>
            </externalCall>
          </statements>
        </body>
      </if>

      <!-- if number1 >= number2 -->
      <if>
        <condition>
          <operation>
            <variable>
              <name>number1</name>
              <type>int</type>
            </variable>
            <operator>&gt;=</operator>
            <variable>
              <name>number2</name>
              <type>int</type>
            </variable>
          </operation>
        </condition>
        <body>
          <statements>
            <externalCall>
              <qualifier>
                System
              </qualifier>
              <qualifier>
                Console
              </qualifier>
              <qualifier>
                WriteLine
              </qualifier>
              <parameters>
                <constant>
                  <value>
                    "{0} &gt;= {1}"
                  </value>
                </constant>
                <variable>
                  <name>number1</name>
                  <type>int</type>
                </variable>
                <variable>
                  <name>number2</name>
                  <type>int</type>
                </variable>
              </parameters>
            </externalCall>
          </statements>
        </body>
      </if>

    </statements>
  </method>
</class>