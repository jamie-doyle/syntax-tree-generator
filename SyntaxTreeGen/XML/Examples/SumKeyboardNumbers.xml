<!-- Adapted from: C# 2012 for Programmers (Deitel & Deitel) Fig 3.14 Pg 61-62 -->
<class>
  <accessLevel>public</accessLevel>
  <isStatic>false</isStatic>
  <name>Addition</name>
  <method>
    <accessLevel>public</accessLevel>
    <isStatic>true</isStatic>
    <returnType>void</returnType>
    <name>Main</name>
    <parameters>
      <variable>
        <name>args</name>
        <type>string[]</type>
        <isDeclaration>true</isDeclaration>
      </variable>
    </parameters>
    <statements>
      <!-- Prompt user -->
      <externalCall>
        <qualifier>
          System
        </qualifier>
        <qualifier>
          Console
        </qualifier>
        <qualifier>
          WriteLine
        </qualifier>
        <parameters>
          <constant>
            <value>
              "Enter first integer: "
            </value>
          </constant>
        </parameters>
      </externalCall>
      <!-- Read first number -->
      <assign>
        <variable>
          <name>number1</name>
          <type>int</type>
          <isDeclaration>true</isDeclaration>
        </variable>
        <externalCall>
          <qualifier>
            Convert
          </qualifier>
          <qualifier>
            ToInt32
          </qualifier>
          <parameters>
            <externalCall>
              <qualifier>
                Console
              </qualifier>
              <qualifier>
                ReadLine
              </qualifier>
            </externalCall>
          </parameters>
        </externalCall>
      </assign>
      <!-- Read second number -->
      <assign>
        <variable>
          <name>number2</name>
          <type>int</type>
          <isDeclaration>true</isDeclaration>
        </variable>
        <externalCall>
          <qualifier>
            Convert
          </qualifier>
          <qualifier>
            ToInt32
          </qualifier>
          <parameters>
            <externalCall>
              <qualifier>
                Console
              </qualifier>
              <qualifier>
                ReadLine
              </qualifier>
            </externalCall>
          </parameters>
        </externalCall>
      </assign>
      
      <!-- Sum numbers -->
      <assign>
        <variable>
          <name>sum</name>
          <type>int</type>
          <isDeclaration>true</isDeclaration>
        </variable>
        <operation>
          <variable>
            <name>number1</name>
            <type>int</type>
          </variable>
          <operator>+</operator>
          <variable>
            <name>number2</name>
            <type>int</type>
          </variable>
        </operation>
      </assign>
      
      <!-- Print sum -->
      <externalCall>
        <qualifier>
          System
        </qualifier>
        <qualifier>
          Console
        </qualifier>
        <qualifier>
          WriteLine
        </qualifier>
        <parameters>
          <variable>
            <name>sum</name>
            <type>int</type>
          </variable>
        </parameters>
      </externalCall>
    </statements>
  </method>
</class>